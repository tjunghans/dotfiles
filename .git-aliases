# Git Command Aliases

alias g='git'
alias gch='git checkout'
alias gbr='git branch'
alias gs='git status'
alias gcd='git checkout develop'
alias gcm='git checkout master'
alias gcb='git checkout -b'
alias gph='git push'
alias gpt='git push origin --tags'
alias gpf='git push --force'
alias gpl='git pull'
alias grf='git reset HEAD --'
alias ga='git add --all .'
alias gau='git add -u .'
alias gc='git commit'
alias gpt='git push origin --tags'
alias gril='git rebase -i HEAD~2'
alias gl='git log --graph --decorate --date=relative --format="%C(yellow)%h%C(reset) %C(green)(%ar)%C(reset) %C(white)%s%C(reset) %C(blue)- %an%C(reset)%C(yellow)%d%C(reset)"'
alias gitclean='git fetch origin && git reset --hard origin'
